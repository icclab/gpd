<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <arg name="robot"      default="steel"/>
  <arg name="public_sim" default="true"/>
  <arg name="gzclient" default="true"/>

  <env name="LC_NUMERIC" value="C" />

  <!-- Gazebo simulation -->
  <include file="$(find gpd)/launch/include/tiago_gazebo.launch">
    <arg name="robot"      value="$(arg robot)"/>
    <arg name="public_sim" value="$(arg public_sim)"/>
    <arg name="world"      value="tiago_pick_place"/>
    <arg name="gui"      value="$(arg gzclient)"/>
  </include>

  <!-- Start gpd CNN -->
  <include file="$(find gpd)/launch/grasp_generation.launch"/>


  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find gpd)/config/tiago_playground.rviz"/>

</launch>
